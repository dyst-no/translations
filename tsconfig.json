{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["dom", "ES2022"],
    "module": "ES2022",
    "target": "ES2022",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": ["**/*.test.ts", "**/*.test.tsx"]
}
